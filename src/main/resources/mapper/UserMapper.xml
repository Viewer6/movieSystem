<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.viewer.moviesystem.mapper.UserMapper">

    <select id="selectUserList" resultType="com.viewer.moviesystem.domain.vo.UserListVO">
        SELECT
        id,
        username,
        password,
        email,
        role,
        status
        FROM
        user
        <where>
            <if test="title !=null and title !='' ">
                AND te.title LIKE CONCAT('%',#{title},'%')
            </if>
        </where>
        ORDER BY
        create_time DESC
    </select>
</mapper>